<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ReviewItemsFragment">

    <ScrollView
        android:layout_below="@id/t1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Rating &amp; Review"
                android:textStyle="bold"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/reviewitem_ratingtextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.9"
                    android:layout_marginTop="10dp"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="#000"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/5"
                    android:layout_marginTop="10dp"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="#000"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="30dp">
                    <RatingBar
                        android:id="@+id/reviewitem_ratingbar"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:layout_marginTop="5dp"
                        android:clickable="true"/>
                    <TextView
                        android:id="@+id/reviewitem_totalreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="56 Review &amp; 4036 Rating"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdcdc"
                android:layout_marginTop="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#0A770D">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.4"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:layout_marginLeft="5dp"
                        android:padding="7dp"/>
                    <TextView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/ic_star_black_24dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:padding="7dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="great deal"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:padding="7dp"
                    android:layout_marginHorizontal="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="osm very iice product"
                android:textColor="#000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="By Anurag on March 20, 2020"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/submit"
                    android:text="Verified Buyer"
                    android:backgroundTint="#DAD6D6"
                    android:textSize="15dp"
                    android:layout_margin="5dp"
                    android:padding="5dp"></TextView>
            </LinearLayout>
            <TextView
                android:clickable="true"
                android:id="@+id/more_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View All Review"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#147BCC"></TextView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
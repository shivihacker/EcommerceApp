<LinearLayout android:id="@+id/line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="6dp"
    android:orientation="horizontal"
    android:background="@drawable/bg_line"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/vertical_adapter_img"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:padding="3dp"
        android:src="@drawable/shoes"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/vertical_adapter_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WOMEN Casual Sneaker Shoes"
            android:textStyle="bold"
            android:textColor="#4E2696"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/vertical_adapter_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Rs.8,999"
            android:padding="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#0A770D"
                android:background="@drawable/submit"
                android:orientation="horizontal"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="8dp">
                <TextView
                    android:id="@+id/vertical_adapter_product_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.4"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_marginLeft="7dp"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_star_black_24dp"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:padding="2dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_share_black_24dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

    </LinearLayout>
    <com.skydoves.elasticviews.ElasticButton
        android:id="@+id/vertical_adapter_wishlist"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp"
        android:backgroundTint="#9e9e9e"
        android:background="@drawable/ic_favorite_black_24dp"/>

</LinearLayout>

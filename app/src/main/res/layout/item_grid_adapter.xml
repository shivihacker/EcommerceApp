<LinearLayout android:id="@+id/line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical"
    android:background="@drawable/bg_line"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/realme"
            android:padding="5dp"
            android:layout_weight="1"/>
        <com.skydoves.elasticviews.ElasticButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_favorite_border_black_24dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Realme5 (crystal Purple..."
        android:maxLength="25"
        android:textStyle="bold"
        android:layout_marginLeft="2dp"
        android:textColor="#4E2696"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#8AD335"
        android:textSize="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="2dp"
        android:text="12+8+2+2MP QUAD CAM"/>
    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_marginLeft="2dp"
        android:textStyle="bold"
        android:text="Rs.8,999"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0A770D"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.4"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="15dp"
                android:padding="5dp"/>
            <TextView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_star_black_24dp"
                android:layout_gravity="center"
                android:padding="5dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_share_black_24dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
</LinearLayout>

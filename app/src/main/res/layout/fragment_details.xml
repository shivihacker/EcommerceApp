<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F1EBEB"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragments.DetailsFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <androidx.core.widget.NestedScrollView
           android:id="@+id/scroll_item"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="50dp"
           android:scrollbars="none">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <androidx.viewpager.widget.ViewPager
                   android:id="@+id/newviewpage"
                   android:layout_width="match_parent"
                   android:background="@color/white"
                   android:layout_height="250dp"/>
               <me.relex.circleindicator.CircleIndicator
                   android:id="@+id/newindicator"
                   android:layout_width="match_parent"
                   android:layout_height="4dp"
                   app:ci_drawable="@drawable/red_dot"
                   app:ci_height="8dp"
                   app:ci_width="8dp"
                   app:ci_drawable_unselected="@drawable/green_dot"
                   android:layout_marginTop="-20dp"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="20dp"
                   android:gravity="center_vertical">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="#000"
                       android:textSize="20dp"
                       android:layout_marginLeft="5dp"
                       android:layout_marginVertical="10dp"
                       android:textStyle="bold"
                       android:text="Rs."/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="#000"
                       android:textSize="20dp"
                       android:layout_marginLeft="5dp"
                       android:layout_marginVertical="10dp"
                       android:layout_weight="1"
                       android:textStyle="bold"
                       android:text="8,999"
                       android:id="@+id/price"/>
                   <com.skydoves.elasticviews.ElasticFloatingActionButton
                       android:id="@+id/add_to_wishlist"
                       android:clickable="true"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginRight="10dp"
                       android:layout_marginTop="3dp"
                       android:tint="#9e9e9e"
                       android:src="@drawable/ic_favorite_black_24dp"
                       android:backgroundTint="@color/default_color"/>
               </LinearLayout>
               <TextView
                   android:id="@+id/p_name"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="GULMOHAR JAIPUR Womens Cotton"
                   android:textSize="20dp"
                   android:textColor="#000" />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Free Delivery"
                       android:textColor="#4E2696"
                       android:layout_marginVertical="5dp"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"/>
                   <Button
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:background="@drawable/ic_share_black_24dp"
                       android:layout_marginRight="10dp"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginVertical="5dp"
                   android:layout_marginLeft="5dp">
                   <LinearLayout
                       android:layout_width="70dp"
                       android:layout_height="30dp"
                       android:orientation="horizontal"
                       android:background="@drawable/submit"
                       android:backgroundTint="#0A770D">
                       <TextView
                           android:id="@+id/rating"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="4.4"
                           android:textColor="#fff"
                           android:gravity="center"
                           android:textStyle="bold"
                           android:textAlignment="center"
                           android:textSize="17sp"
                           android:layout_marginLeft="7dp"
                           android:padding="5dp"/>
                       <TextView
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:background="@drawable/ic_star_black_24dp"
                           android:layout_gravity="center"
                           android:layout_marginRight="5dp"
                           android:padding="5dp"/>
                   </LinearLayout>
                   <TextView
                       android:id="@+id/review"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="20"
                       android:textColor="#000"
                       android:textSize="15dp"
                       android:paddingVertical="7dp"
                       android:layout_marginLeft="10dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Total Review"
                       android:textColor="#000"
                       android:textSize="15dp"
                       android:paddingVertical="7dp"
                       android:layout_marginLeft="5dp"
                       android:layout_marginRight="10dp"/>
                   <TextView
                       android:layout_width="1dp"
                       android:layout_height="20dp"
                       android:background="#000"/>
                   <TextView
                       android:id="@+id/total_order"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="206 orders"
                       android:textColor="#000"
                       android:textSize="15dp"
                       android:padding="7dp"
                       android:layout_marginHorizontal="10dp"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <EditText
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:hint="Pincode"
                       android:textColor="#000"
                       android:textSize="15dp"
                       android:layout_marginLeft="10dp"
                       android:layout_weight="0.5"/>
                   <Button
                       android:clickable="true"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="Check"
                       android:textColor="#fff"
                       android:background="@drawable/del_bg"
                       android:backgroundTint="#000"
                       android:textSize="15dp"
                       android:layout_marginHorizontal="10dp"/>
               </LinearLayout>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:text="Delivery in 5-6 days"
                   android:layout_margin="15dp"
                   android:gravity="center_vertical"
                   android:textColor="#000"
                   android:elevation="6dp"
                   android:textSize="15dp"
                   android:background="@drawable/del_bg"/>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:background="#50000000"
                   android:elevation="10dp"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Description"
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   android:textSize="15sp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="10dp"/>
               <TextView
                   android:id="@+id/detail_frag_description"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="10dp"
                   android:textColor="@color/black"/>
           </LinearLayout>
       </androidx.core.widget.NestedScrollView>

       <LinearLayout
           android:id="@+id/item_line"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@id/scroll_item"
           android:layout_alignParentBottom="true"
           android:orientation="horizontal">

           <com.skydoves.elasticviews.ElasticButton
               android:id="@+id/detail_buy_now"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_margin="15dp"
               android:layout_weight="1"
               android:background="@drawable/del_bg"
               android:backgroundTint="#2F3B80"
               android:text="Buy Now"
               android:textColor="#fff"
               android:textSize="15dp" />

           <com.skydoves.elasticviews.ElasticButton
               android:id="@+id/detail_add_cart"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_margin="15dp"
               android:layout_weight="1"
               android:background="@drawable/del_bg"
               android:backgroundTint="#2F3B80"
               android:text="Add Cart"
               android:textColor="#fff"
               android:textSize="15dp" />

       </LinearLayout>
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/frame"/>

   </RelativeLayout>
</FrameLayout>
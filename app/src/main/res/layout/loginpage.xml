<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/project_ecom"
    tools:context=".Activities.LoginPage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <com.skydoves.elasticviews.ElasticButton
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="20dp"
                android:textColor="#fff"
                android:background="@drawable/lgn_bg"/>
            <com.skydoves.elasticviews.ElasticButton
                android:id="@+id/btn_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"
                android:text="Sign up"
                android:textColor="#fff"
                android:background="@drawable/sign_bg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_login"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/triangle"
                android:rotation="270"
                android:layout_marginBottom="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="-5dp"/>
            <ImageView
                android:id="@+id/img_signup"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/triangle"
                android:visibility="gone"
                android:layout_marginRight="-5dp"
                android:rotation="270"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5dp"
                android:padding="5dp"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/crd_bg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Login"
                        android:textColor="#E0D9D9"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="40dp"
                        android:text="Email Id"
                        android:textColor="#E0D9D9"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/mobile1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="#fff"
                        android:layout_marginTop="5dp"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/submit"
                        android:backgroundTint="#233776" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:text="Password"
                        android:textColor="#E0D9D9"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/pass1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#fff"
                        android:background="@drawable/submit"
                        android:backgroundTint="#233776"
                        android:inputType="textPassword" />

                    <TextView
                        android:id="@+id/forgetpass"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="170dp"
                        android:layout_marginRight="10dp"
                        android:text="Forget Password?"
                        android:textAlignment="textEnd"
                        android:textColor="#E0D9D9"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_signup"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5dp"
                android:padding="5dp"
                app:cardCornerRadius="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/crd_bg">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SignUp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#E0D9D9"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textStyle="bold"
                        android:textColor="#E0D9D9"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="40dp"/>
                    <EditText
                        android:id="@+id/name1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:background="@drawable/submit"
                        android:inputType="textPersonName"
                        android:backgroundTint="#233776"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textStyle="bold"
                        android:textColor="#E0D9D9"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"/>
                    <EditText
                        android:id="@+id/email1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/submit"
                        android:backgroundTint="#233776"
                        android:textColor="#fff"
                        android:inputType="textEmailAddress"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number"
                        android:textStyle="bold"
                        android:textColor="#E0D9D9"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"/>
                    <EditText
                        android:id="@+id/mobile2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/submit"
                        android:backgroundTint="#233776"
                        android:textColor="#fff"
                        android:inputType="number"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"/>
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textStyle="bold"
                    android:textColor="#E0D9D9"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"/>
                    <EditText
                        android:id="@+id/pass2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/submit"
                        android:backgroundTint="#233776"
                        android:inputType="textPassword"
                        android:textColor="#fff"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="70dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/submit"
                android:backgroundTint="#fff"
                android:text="Login"
                android:textColor="#000"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="370dp"/>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/facebook"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/twitter"
            android:layout_gravity="center"
            android:background="@drawable/submit"
            android:padding="5dp"
            android:layout_marginVertical="10dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/google"
            android:layout_gravity="center"
            android:background="@drawable/submit"
            android:layout_marginBottom="100dp"
            android:backgroundTint="#FA4530"
            android:padding="5dp"/>
    </LinearLayout>

</RelativeLayout>



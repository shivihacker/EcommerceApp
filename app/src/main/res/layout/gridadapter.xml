<LinearLayout android:id="@+id/line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical"
    android:elevation="6dp"
    android:background="@drawable/bg_line"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/grid_adapter_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/realme"
            android:padding="5dp"
            android:layout_weight="1"/>
        <com.skydoves.elasticviews.ElasticButton
            android:id="@+id/grid_adapter_wishlist"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#9e9e9e"
            android:background="@drawable/ic_favorite_black_24dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/grid_adapter_productname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Realme5 (crystal Purple..."
        android:maxLength="25"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:textColor="#4E2696"/>
    <TextView
        android:id="@+id/grid_adapter_productprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        android:textStyle="bold"
        android:text="Rs.8,999"/>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#0A770D"
        android:background="@drawable/submit"
        android:orientation="horizontal"
        android:layout_marginVertical="5dp"
        android:layout_marginLeft="8dp">
        <TextView
            android:id="@+id/grid_adapter_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.4"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginLeft="7dp"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_star_black_24dp"
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:padding="2dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/grid_adapter_share"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_share_black_24dp"
        android:layout_marginRight="10dp"/>
</LinearLayout>
</LinearLayout>

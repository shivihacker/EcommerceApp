<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="5dp"
    android:layout_marginVertical="3dp"
    android:layout_marginHorizontal="3dp"
    android:background="@color/default_color"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="3dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp"
            android:layout_marginHorizontal="10dp"
            android:text="Select Payment Option"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:background="?android:attr/listDivider" />
        <LinearLayout
            android:id="@+id/upi_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPI"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:padding="10dp"/>
            <ImageView
                android:id="@+id/upi_selection_arrow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/arrow_forward"
                android:rotation="90"
                android:layout_marginTop="13dp"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_vpa_enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8F0F0"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter VPA. Ex: 5894xxxxxx@oksbi"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_marginVertical="15dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"/>
            <Button
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Verify"
                android:textColor="#fff"
                android:background="@drawable/del_bg"
                android:backgroundTint="@color/colorPrimary"
                android:textSize="15dp"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="60dp"
            android:background="?android:attr/listDivider" />
        <LinearLayout
            android:id="@+id/googlepay_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Google Pay"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:padding="10dp"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/arrow_forward"
                android:layout_marginTop="13dp"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="60dp"
            android:background="?android:attr/listDivider" />
        <LinearLayout
            android:id="@+id/card_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Debit/ATM/Credit Card"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:padding="10dp"/>
            <ImageView
                android:id="@+id/card_selection_arrow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:rotation="90"
                android:src="@drawable/arrow_forward"
                android:layout_marginTop="13dp"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_card_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New CArd Details" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="60dp"
            android:background="?android:attr/listDivider" />
        <LinearLayout
            android:id="@+id/cashOnDelivery_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cash On Delivery"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:padding="10dp"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/arrow_forward"
                android:layout_marginTop="13dp"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
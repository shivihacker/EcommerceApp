<LinearLayout android:id="@+id/line"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:elevation="6dp"
    android:orientation="vertical"
    android:background="@drawable/bg_line"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/horizontal_adapter_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/gulmohar1"
            android:padding="5dp"
            android:layout_weight="1"/>
        <com.skydoves.elasticviews.ElasticButton
            android:id="@+id/horizontal_adapter_wishlist"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#9e9e9e"
            android:background="@drawable/ic_favorite_black_24dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/horizontal_adapter_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_marginLeft="8dp"
        android:text="GULMOHAR JAIPUR Womens Cotton"
        android:textStyle="bold"
        android:textColor="#4E2696" />

    <TextView
        android:id="@+id/horizontal_adapter_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:text="Rs.8,999"
        android:padding="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#0A770D"
            android:background="@drawable/submit"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="8dp">
            <TextView
                android:id="@+id/horizontal_adapter_product_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.4"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:textSize="18sp" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_star_black_24dp"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:padding="2dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_share_black_24dp"
            android:layout_marginRight="5dp"/>
    </LinearLayout>

</LinearLayout>

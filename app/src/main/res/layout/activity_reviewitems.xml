<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Reviewitems">
    <LinearLayout
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2F3B80">
        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">
            <com.skydoves.elasticviews.ElasticButton
                android:id="@+id/review_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_keyboard_backspace_black_24dp"
                android:layout_marginLeft="5dp"
                android:padding="5dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_shopping_cart_black_24dp"
                android:layout_marginRight="5dp"/>
            <com.skydoves.elasticviews.ElasticButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_more_vert_black_24dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp">
            <TextView
                android:contextClickable="true"
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Details"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginHorizontal="50dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/more_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="More Items"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Review"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginHorizontal="50dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_below="@id/t1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Rating &amp; Review"
            android:textStyle="bold"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.9/5"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#000"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">
                <me.zhanghai.android.materialratingbar.MaterialRatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:numStars="5"
                    android:maxHeight="50dp"
                    android:maxWidth="40dp"
                    android:rating="3.5"
                    app:mrb_fillBackgroundStars="true"
                    android:isIndicator="true"
                    android:clickable="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="56 Review &amp; 4036 Rating"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc"
            android:layout_marginTop="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#0A770D">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.4"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:padding="7dp"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/ic_star_black_24dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:padding="7dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="great deal"
                android:textColor="#000"
                android:textSize="15dp"
                android:padding="7dp"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="osm very iice product"
            android:textColor="#000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By Anurag on March 20, 2020"
                android:layout_weight="1"
                android:layout_marginTop="5dp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/submit"
                android:text="Verified Buyer"
                android:backgroundTint="#DAD6D6"
                android:textSize="15dp"
                android:layout_margin="5dp"
                android:padding="5dp"></TextView>
        </LinearLayout>
        <TextView
            android:clickable="true"
            android:id="@+id/more_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View All Review"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#147BCC"></TextView>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>